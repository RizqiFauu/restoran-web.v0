generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())

  menus     Menu[]
}

model Menu {
  id          Int      @id @default(autoincrement())
  name        String
  price       Int
  categoryId  Int
  createdAt   DateTime @default(now())

  category    Category @relation(fields: [categoryId], references: [id])
}
